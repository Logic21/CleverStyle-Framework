%style
	-# Hack, bug in Polymer, font not loaded from stylesheet import below, so it was moved here
	@font-face{font-family:'FontAwesome';src:url('/includes/html/CleverStyle%20Widgets/cs-icon/fontawesome-webfont.woff') format('woff');font-weight:normal;font-style:normal}
%dom-module(id="cs-icon")
	%link(rel="import" href="style.css" type="css")
	%template
		%template(is="dom-if" if="[[multiple_icons]]")
			%span.fa-stack
				%template(is="dom-repeat" items="[[icon_class(icon, flipX, flipY, mono, rotate, spin, spinStep)]]")
					%i(class$="[[item]]")
		%template(is="dom-if" if="[[!multiple_icons]]")
			%i(class$="[[icon_class(icon, flipX, flipY, mono, rotate, spin, spinStep)]]")
	%script(src="script.js")
