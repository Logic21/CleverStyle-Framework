%dom-module(id="cs-shop-cart-item")
	%link(rel="import" href="style.css" type="css")
	%template
		#content.cs-margin-top
			%div
				%a#img.uk-thumbnail.uk-thumbnail-expand(href="[[href]]")
			.uk-form
				.uk-text-large
					%a(href="[[href]]") [[item_title]]
					\:
					%input.uk-form-width-small(min="0" type="number" value="{{units::input}}")/
					%span [[concat('x ', unit_price_formatted, ' = ', price_formatted)]]
					%span#discount
				%div
					%content(select="#description")
	%script(src="script.js")
