			.uk-width-3-10
				%a#img.uk-thumbnail.uk-thumbnail-expand(href="[[href]]")
			.uk-width-7-10
				%content(select="h1")
				%content(select="#description")
				.nested-categories
					%content(select="#nested")
	%script(src="script.js")
