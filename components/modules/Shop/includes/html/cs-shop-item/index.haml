%dom-module(id="cs-shop-item")
	%link(rel="import" href="style.css" type="css")
	%template
		%style(include="advanced-styles")
		%h1 [[header_title]]
		#content
			%div
				#images
			#div.cs-padding-left
				%p
					%span.cs-text-primary.cs-text-lead [[price]]
					%cs-shop-add-to-cart(item_id="[[item_id]]")
					%span.cs-text-lead [[concat('(', in_stock, ' in stock)')]]
				%content(select="#description")
		%template(is="dom-if" if="[[show_attributes]]")
			%h2.cs-margin-top [[L.shop_characteristics]]
			%content(select="#attributes")
	%script(src="script.js")
