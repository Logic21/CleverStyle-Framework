%dom-module#cs-system-admin-components-plugins-list
	%template
		%cs-table(center="" list="" with-header="")
			%cs-table-row
				%cs-table-cell [[L.plugin_name]]
				%cs-table-cell [[L.state]]
				%cs-table-cell [[L.action]]
			%template(is="dom-repeat" items="[[plugins]]" as="plugin")
				%cs-table-row(class$="[[plugin.class]]" data-plugin-index$="[[index]]")
					%cs-table-cell
						%template(is="dom-if" if="[[plugin.info]]")
							%a(href="[[concat('/admin/', plugin.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[plugin.info]]") [[plugin.name_localized]]
						%template(is="dom-if" if="[[!plugin.info]]")
							%a(href="[[concat('/admin/', plugin.name)]]") [[plugin.name_localized]]
					%cs-table-cell
						%span(class$="[[plugin.icon]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[plugin.icon_text]]")
						%template(is="dom-if" if="[[plugin.readme]]")
							%span.uk-button.cs-button-compact.uk-icon-book(data-modal-type="readme" data-uk-tooltip$="[[tooltip_animation]]" on-click="generic_modal" title$="[[concat(L.information_about_plugin, '<br>', L.click_to_view_details)]]")
						%template(is="dom-if" if="[[plugin.license]]")
							%span.uk-button.cs-button-compact.uk-icon-legal(data-modal-type="license" data-uk-tooltip$="[[tooltip_animation]]" on-click="generic_modal" title$="[[concat(L.license, '<br>', L.click_to_view_details)]]")
					%cs-table-cell
						%template(is="dom-if" if="[[equal(plugin.active, 1)]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/plugins/disable/', plugin.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.disable]]")
								%span.uk-icon-minus
						%template(is="dom-if" if="[[equal(plugin.active, 0)]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/plugins/enable/', plugin.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.enable]]")
								%span.uk-icon-check
								%span [[L.enable]]
	%script(src="script.js")
