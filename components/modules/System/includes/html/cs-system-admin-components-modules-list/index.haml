%dom-module(id="cs-system-admin-components-modules-list")
	%template
		%cs-table(center list with-header)
			%cs-table-row
				%cs-table-cell [[L.module_name]]
				%cs-table-cell [[L.state]]
				%cs-table-cell [[L.action]]
			%template(is="dom-repeat" items="[[modules]]" as="module")
				%cs-table-row(class$="[[module.class]]" data-module-index$="[[index]]")
					%cs-table-cell
						%template(is="dom-if" if="[[module.info]]")
							%template(is="dom-if" if="[[module.administration]]")
								%a(href="[[concat('/admin/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[module.info]]") [[module.name_localized]]
							%template(is="dom-if" if="[[!module.administration]]")
								%span(data-uk-tooltip$="[[tooltip_animation]]" title$="[[module.info]]") [[module.name_localized]]
						%template(is="dom-if" if="[[!module.info]]")
							%template(is="dom-if" if="[[module.administration]]")
								%a(href="[[concat('/admin/', module.name)]]") [[module.name_localized]]
							%template(is="dom-if" if="[[!module.administration]]")
								%span [[module.name_localized]]
					%cs-table-cell
						%span(class$="[[module.icon]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[module.icon_text]]")
						%template(is="dom-if" if="[[module.api]]")
							%template(is="dom-if" if="[[!module.api.type]]")
								%span.uk-icon-link(data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.api_exists]]")
							%template(is="dom-if" if="[[module.api.type]]")
								%span.uk-button.cs-button-compact.uk-icon-link(data-modal-type="api" on-click="generic_modal" data-uk-tooltip$="[[tooltip_animation]]" title$="[[concat(L.api_exists, '<br>', L.click_to_view_details)]]")
						%template(is="dom-if" if="[[module.readme]]")
							%span.uk-button.cs-button-compact.uk-icon-book(data-modal-type="readme" on-click="generic_modal" data-uk-tooltip$="[[tooltip_animation]]" title$="[[concat(L.information_about_module, '<br>', L.click_to_view_details)]]")
						%template(is="dom-if" if="[[module.license]]")
							%span.uk-button.cs-button-compact.uk-icon-legal(data-modal-type="license" on-click="generic_modal" data-uk-tooltip$="[[tooltip_animation]]" title$="[[concat(L.license, '<br>', L.click_to_view_details)]]")
					%cs-table-cell(left)
						%template(is="dom-if" if="[[module.can_be_set_as_default]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/default_module/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.make_default_module]]")
								%span.uk-icon-home
						%template(is="dom-if" if="[[module.db_settings]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/db/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.databases]]")
								%span.uk-icon-database
						%template(is="dom-if" if="[[module.storage_settings]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/storage/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.storages]]")
								%span.uk-icon-hdd-o
						%template(is="dom-if" if="[[module.administration]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.module_admin_page]]")
								%span.uk-icon-sliders
						%template(is="dom-if" if="[[equal(module.active, 1)]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/disable/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.disable]]")
								%span.uk-icon-minus
						%template(is="dom-if" if="[[equal(module.active, 0)]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/enable/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.enable]]")
								%span.uk-icon-check
								%span [[L.enable]]
						%template(is="dom-if" if="[[!equal(module.active, '-1')]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/uninstall/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.uninstall]]")
								%span.uk-icon-trash
						%template(is="dom-if" if="[[equal(module.active, '-1')]]")
							%a.uk-button.cs-button-compact(href="[[concat('/admin/System/components/modules/install/', module.name)]]" data-uk-tooltip$="[[tooltip_animation]]" title$="[[L.install]]")
								%span.uk-icon-download
								%span [[L.install]]
	%script(src="script.js")
