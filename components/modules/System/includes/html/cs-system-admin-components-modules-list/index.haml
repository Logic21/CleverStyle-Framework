%dom-module(id="cs-system-admin-components-modules-list")
	%template
		%cs-table(center list with-header)
			%cs-table-row
				%cs-table-cell [[L.module_name]]
				%cs-table-cell [[L.state]]
				%cs-table-cell [[L.action]]
			%template(is="dom-repeat" items="[[modules]]" as="module")
				%cs-table-row(class$="[[module.class]]" data-module-index$="[[index]]")
					%cs-table-cell
						%template(is="dom-if" if="[[module.info]]")
							%template(is="dom-if" if="[[module.administration]]")
								%a(href="[[concat('/admin/', module.name)]]" tooltip="[[module.info]]")
									%span [[module.name_localized]]
									%cs-tooltip
							%template(is="dom-if" if="[[!module.administration]]")
								%span(tooltip="[[module.info]]")
									%span [[module.name_localized]]
									%cs-tooltip
						%template(is="dom-if" if="[[!module.info]]")
							%template(is="dom-if" if="[[module.administration]]")
								%a(href="[[concat('/admin/', module.name)]]") [[module.name_localized]]
							%template(is="dom-if" if="[[!module.administration]]")
								%span [[module.name_localized]]
					%cs-table-cell
						%cs-icon(icon="[[module.icon]]" tooltip="[[module.icon_text]]")
						%template(is="dom-if" if="[[module.api]]")
							%template(is="dom-if" if="[[!module.api.type]]")
								%cs-icon(icon="link" tooltip="[[L.api_exists]]")
							%template(is="dom-if" if="[[module.api.type]]")
								%button(is="cs-button" type="button" icon="link" data-modal-type="api" on-click="generic_modal" tooltip="[[concat(L.api_exists, '<br>', L.click_to_view_details)]]")
						%template(is="dom-if" if="[[module.readme]]")
							%button(is="cs-button" type="button" icon="book" data-modal-type="readme" on-click="generic_modal" tooltip="[[concat(L.information_about_module, '<br>', L.click_to_view_details)]]")
						%template(is="dom-if" if="[[module.license]]")
							%button(is="cs-button" type="button" icon="legal" data-modal-type="license" on-click="generic_modal" tooltip="[[concat(L.license, '<br>', L.click_to_view_details)]]")
					%cs-table-cell(left)
						%template(is="dom-if" if="[[module.can_be_set_as_default]]")
							%a(is="cs-link-button" icon="home" href="[[concat('/admin/System/components/modules/default_module/', module.name)]]" tooltip="[[L.make_default_module]]")
						%template(is="dom-if" if="[[module.db_settings]]")
							%a(is="cs-link-button" icon="database" href="[[concat('/admin/System/components/modules/db/', module.name)]]" tooltip="[[L.databases]]")
						%template(is="dom-if" if="[[module.storage_settings]]")
							%a(is="cs-link-button" icon="hdd-o" href="[[concat('/admin/System/components/modules/storage/', module.name)]]" tooltip="[[L.storages]]")
						%template(is="dom-if" if="[[module.administration]]")
							%a(is="cs-link-button" icon="sliders" href="[[concat('/admin/', module.name)]]" tooltip="[[L.module_admin_page]]")
						%template(is="dom-if" if="[[equal(module.active, 1)]]")
							%a(is="cs-link-button" icon="minus" href="[[concat('/admin/System/components/modules/disable/', module.name)]]" tooltip="[[L.disable]]")
						%template(is="dom-if" if="[[equal(module.active, 0)]]")
							%a(is="cs-link-button" icon="check" href="[[concat('/admin/System/components/modules/enable/', module.name)]]" tooltip="[[L.enable]]") [[L.enable]]
						%template(is="dom-if" if="[[!equal(module.active, '-1')]]")
							%a(is="cs-link-button" icon="trash" href="[[concat('/admin/System/components/modules/uninstall/', module.name)]]" tooltip="[[L.uninstall]]")
						%template(is="dom-if" if="[[equal(module.active, '-1')]]")
							%a(is="cs-link-button" icon="download" href="[[concat('/admin/System/components/modules/install/', module.name)]]" tooltip="[[L.install]]") [[L.install]]
	%script(src="script.js")
