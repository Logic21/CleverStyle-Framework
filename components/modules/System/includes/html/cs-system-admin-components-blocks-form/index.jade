dom-module#cs-system-admin-components-blocks-form
	link(rel="import" href="style.css" type="css")
	template
		style(include="advanced-styles-alone")
		table.cs-table(right-left)
			tr
				td
					span(tooltip="[[L.block_type_info]]")
						span [[L.block_type]]
						cs-tooltip
				td
					select(is="cs-select" name="block[type]" size="5" selected="{{block.type}}")
						template(is="dom-repeat" items="[[types]]" as="type")
							option(value="[[type]]") [[type]]
			tr
				td
					span(tooltip="[[L.block_title_info]]")
						span [[L.block_title]]
						cs-tooltip
				td
					input(is="cs-input-text" name="block[title]" type="text" value="{{block.title}}")
			tr
				td
					span(tooltip="[[L.block_active_info]]")
						span [[L.block_active]]
						cs-tooltip
				td
					label(is="cs-label-button" value="{{block.active}}")
						input(name="block[active]" type="radio" value="1")
						span [[L.yes]]
					label(is="cs-label-button")
						input(name="block[active]" type="radio" value="0")
						span [[L.no]]
			tr
				td
					span(tooltip="[[L.block_template_info]]")
						span [[L.block_template]]
						cs-tooltip
				td
					select(is="cs-select" name="block[template]" size="5" selected="{{block.template}}")
						template(is="dom-repeat" items="[[templates]]" as="template")
							option(value="[[template]]") [[template]]
			tr
				td
					span(tooltip="[[L.block_start_info]]")
						span [[L.block_start]]
						cs-tooltip
				td
					input(is="cs-input-text" name="block[start]" type="datetime-local" value="{{block.start}}")
			tr
				td
					span(tooltip="[[L.block_expire_info]]")
						span [[L.block_expire]]
						cs-tooltip
				td
					label(is="cs-label-button" value="{{block.expire.state}}")
						input(name="block[expire][state]" type="radio" value="0")
						span [[L.never]]
					label(is="cs-label-button")
						input(name="block[expire][state]" type="radio" value="1")
						span [[L.as_specified]]
					br
					br
					input(is="cs-input-text" name="block[expire][date]" type="datetime-local" value="{{block.expire.date}}")
		.html(hidden$="[[!equal(block.type, 'html')]]")
			// TODO editor not working here
			textarea.EDITOR(is="cs-textarea" autosize full-width rows="5" name="block[html]" value="{{block.content}}")
		.raw_html(hidden$="[[!equal(block.type, 'raw_html')]]")
			textarea(is="cs-textarea" autosize full-width rows="5" name="block[raw_html]" value="{{block.content}}")
		button(is="cs-button" type="button" primary on-tap="_save" class="cs-margin-top") [[L.save]]
	script(src="script.js")
