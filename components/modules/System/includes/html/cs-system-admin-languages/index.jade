dom-module#cs-system-admin-languages
	template
		style(include="advanced-styles")
		form.cs-text-center(is="cs-form")
			label(tooltip="[[L.default_language_info]]")
				[[L.default_language]]
				cs-tooltip
			select(is="cs-select" selected="{{settings.language}}" size="5")
				template(is="dom-repeat" items="[[settings.active_languages]]")
					option [[item]]
			label(tooltip="[[L.active_languages_info]]")
				[[L.active_languages]]
				cs-tooltip
			select(is="cs-select" selected="{{settings.active_languages}}" size="5" multiple)
				template(is="dom-repeat" items="[[settings.languages]]")
					option [[item]]
			label(tooltip="[[L.multilingual_info]]")
				[[L.multilingual]]
				cs-tooltip
			nav(is="cs-nav-button-group")
				label(is="cs-label-button" value="{{settings.multilingual}}")
					input(type="radio" value="0")
					[[L.off]]
				label(is="cs-label-button")
					input(type="radio" value="1")
					[[L.on]]
			p
				button(is="cs-button" type="button" on-tap="_apply" tooltip="[[L.apply_info]]") [[L.apply]]
				= ' '
				button(is="cs-button" type="button" on-tap="_save" tooltip="[[L.save_info]]") [[L.save]]
				= ' '
				button(is="cs-button" type="button" on-tap="_cancel" tooltip="[[L.cancel_info]]" disabled$="[[!settings.applied]]") [[L.cancel]]
	script(src="script.js")
