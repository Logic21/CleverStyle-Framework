dom-module#cs-system-admin-system
	template
		style(include="advanced-styles")
		form.cs-text-center(is="cs-form")
			label(tooltip="[[L.site_mode_info]]")
				[[L.site_mode]]
				cs-tooltip
			nav(is="cs-nav-button-group")
				label(is="cs-label-button" value="{{settings.site_mode}}")
					input(type="radio" value="0")
					[[L.off]]
				label(is="cs-label-button")
					input(type="radio" value="1")
					[[L.on]]
			label(tooltip="[[L.closed_title_info]]")
				[[L.closed_title]]
				cs-tooltip
			input(is="cs-input-text" value="{{settings.closed_title}}")
			label(tooltip="[[L.closed_text_info]]")
				[[L.closed_text]]
				cs-tooltip
			cs-editor(value="{{settings.closed_text}}")
				textarea(is="cs-textarea" autosize value="{{settings.closed_text}}")
			label(tooltip="[[L.title_delimiter_info]]")
				[[L.title_delimiter]]
				cs-tooltip
			input(is="cs-input-text" value="{{settings.title_delimiter}}")
			label(tooltip="[[L.title_reverse_info]]")
				[[L.title_reverse]]
				cs-tooltip
			nav(is="cs-nav-button-group")
				label(is="cs-label-button" value="{{settings.title_reverse}}")
					input(type="radio" value="0")
					[[L.off]]
				label(is="cs-label-button")
					input(type="radio" value="1")
					[[L.on]]
			label(tooltip="[[L.show_tooltips_info]]")
				[[L.show_tooltips]]
				cs-tooltip
			nav(is="cs-nav-button-group")
				label(is="cs-label-button" value="{{settings.show_tooltips}}")
					input(type="radio" value="0")
					[[L.off]]
				label(is="cs-label-button")
					input(type="radio" value="1")
					[[L.on]]
			label(tooltip="[[L.simple_admin_mode_info]]")
				[[L.simple_admin_mode]]
				cs-tooltip
			nav(is="cs-nav-button-group")
				label(is="cs-label-button" value="{{settings.simple_admin_mode}}")
					input(type="radio" value="0")
					[[L.off]]
				label(is="cs-label-button")
					input(type="radio" value="1")
					[[L.on]]
			p
				button(is="cs-button" type="button" on-tap="_apply" tooltip="[[L.apply_info]]") [[L.apply]]
				= ' '
				button(is="cs-button" type="button" on-tap="_save" tooltip="[[L.save_info]]") [[L.save]]
				= ' '
				button(is="cs-button" type="button" on-tap="_cancel" tooltip="[[L.cancel_info]]" disabled$="[[!settings.applied]]") [[L.cancel]]
	script(src="script.js")
