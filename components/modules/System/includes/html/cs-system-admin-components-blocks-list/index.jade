mixin blocks-container (position)
	div(group=position)
		.cs-block-primary.cs-text-primary [[L.#{position}_blocks]]
		template(is="dom-repeat" items="[[blocks.#{position}]]")
			div(index="[[item.index]]" class$="[[_status_class(item.active)]]")
				.title [[item.title]]
				div
					a(is="cs-link-button" icon="pencil" tooltip="[[L.edit]]" href="[[concat('admin/System/components/blocks/edit/', item.index)]]")
					= ' '
					a(is="cs-link-button" icon="key" tooltip="[[L.edit_permissions]]" on-click="_block_permissions")
					= ' '
					a(is="cs-link-button" icon="minus" tooltip="[[L.disable]]" href="[[concat('admin/System/components/blocks/disable/', item.index)]]" hidden$="[[!equal(item.active, 1)]]")
					= ' '
					a(is="cs-link-button" icon="check" tooltip="[[L.enable]]" href="[[concat('admin/System/components/blocks/enable/', item.index)]]" hidden$="[[!equal(item.active, 0)]]")
					= ' '
					a(is="cs-link-button" icon="trash" tooltip="[[L.delete]]" href="[[concat('admin/System/components/blocks/delete/', item.index)]]")
dom-module(id="cs-system-admin-components-blocks-list")
	link(rel="import" href="style.css" type="css")
	template
		style(include="advanced-styles-alone")
		div
		+blocks-container('top')
		div
		+blocks-container('left')
		+blocks-container('floating')
		+blocks-container('right')
		div
		+blocks-container('bottom')
		div
	script(src="script.js")
