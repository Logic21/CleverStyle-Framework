dom-module#cs-cleverstyle-header-user-block
	link(rel="import" href="style.css" type="css")
	template
		style(is="custom-style" include="advanced-styles")
		div
			img(src="[[avatar]]")
		div
			b
				| [[__('hello', username)]]
				cs-icon(icon="sign-out" hidden="[[guest]]" tooltip="[[L.sign_out]]" on-tap="_sign_out")
			template(is="dom-if" if="[[guest]]")
				nav(is="cs-nav-button-group")
					cs-button(primary): button(type="button" on-tap="_sign_in" small-button)
						cs-icon(icon="sign-in")
						|  [[L.sign_in]]
					cs-button: button(tooltip="[[L.registration_quick_form]]" type="button" on-tap="_registration" small-button)
						cs-icon(icon="pencil")
						|  [[L.registration]]
			template(is="dom-if" if="[[!guest]]")
				nav(is="cs-nav-button-group")
					cs-button: button(type="button" small-button)
						cs-icon(icon="cog")
						|  [[L.settings]]
					nav(is="cs-nav-dropdown" align="right")
						nav(is="cs-nav-button-group" vertical)
							cs-button: button(type="button" on-tap="_general_settings") [[L.general_settings]]
							cs-button: button(type="button" on-tap="_change_password") [[L.change_password]]
	script(src="script.js")
