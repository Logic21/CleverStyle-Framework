dom-module#cs-system-admin-blocks-form
	link(rel="import" href="style.css" type="css")
	template
		style(include="advanced-styles-alone")
		table.cs-table(right-left)
			tr
				td
					span(tooltip="[[L.block_type_info]]")
						| [[L.block_type]]
						cs-tooltip
				td
					cs-select(selected="{{block.type}}"): select(size="5")
						template(is="dom-repeat" items="[[types]]" as="type")
							option(value="[[type]]") [[type]]
			tr
				td
					span(tooltip="[[L.block_title_info]]")
						| [[L.block_title]]
						cs-tooltip
				td
					cs-input-text: input(type="text" value="{{block.title}}")
			tr
				td
					span(tooltip="[[L.block_active_info]]")
						| [[L.block_active]]
						cs-tooltip
				td
					cs-label-button(value="{{block.active}}"): label
						input(type="radio" value="1")
						| [[L.yes]]
					cs-label-button: label
						input(type="radio" value="0")
						| [[L.no]]
			tr
				td
					span(tooltip="[[L.block_start_info]]")
						| [[L.block_start]]
						cs-tooltip
				td
					cs-input-text: input(type="datetime-local" value="{{block.start}}")
			tr
				td
					span(tooltip="[[L.block_expire_info]]")
						| [[L.block_expire]]
						cs-tooltip
				td
					cs-label-button(value="{{block.expire.state}}"): label
						input(type="radio" value="0")
						| [[L.never]]
					cs-label-button: label
						input(type="radio" value="1")
						| [[L.as_specified]]
					br
					br
					cs-input-text: input(type="datetime-local" value="{{block.expire.date}}")
		.html(hidden="[[!equal(block.type, 'html')]]")
			cs-editor(value="{{block.content}}")
				cs-textarea(autosize full-width): textarea(rows="5" value="{{block.content}}")
		.raw_html(hidden="[[!equal(block.type, 'raw_html')]]")
			cs-textarea(autosize full-width): textarea(rows="5" value="{{block.content}}")
		cs-button(primary class="cs-margin-top"): button(type="button" on-tap="_save") [[L.save]]
	script(src="script.js")
