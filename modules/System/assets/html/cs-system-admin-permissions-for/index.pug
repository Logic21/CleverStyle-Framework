dom-module#cs-system-admin-permissions-for
	template
		style(include="advanced-styles")
		h2.cs-text-center(hidden="[[all_permissions.length]]")
			cs-icon(icon="spinner" spin)
		cs-form: form#form
			template(is="dom-repeat" items="[[all_permissions]]" as="permission")
				legend [[permission.group]]
				div
					p.cs-text-left
						cs-button: button(on-tap="invert" type="button") [[L.invert]]
						= ' '
						cs-button: button(on-tap="allow_all" type="button") [[L.allow_all]]
						= ' '
						cs-button: button(on-tap="deny_all" type="button") [[L.deny_all]]
					table.cs-table(right-left)
						template(is="dom-repeat" items="[[permission.labels]]" as="label")
							tr
								td
									| [[label.name]]
									= ' '
									sup [[label.description]]
								td
									cs-group
										cs-label-button: label
											input(type="radio" value="-1" checked="[[permission_state(label.id, -1)]]" name="[[concat('permissions[', label.id, ']')]]")
											| [[L.inherited]]
										cs-label-button: label
											input(type="radio" value="0" checked="[[permission_state(label.id, 0)]]" name="[[concat('permissions[', label.id, ']')]]")
											| [[L.deny]]
										cs-label-button: label
											input(type="radio" value="1" checked="[[permission_state(label.id, 1)]]" name="[[concat('permissions[', label.id, ']')]]")
											| [[L.allow]]
		cs-button(primary): button(on-tap="save" type="button") [[L.save]]
	script(src="script.js")
