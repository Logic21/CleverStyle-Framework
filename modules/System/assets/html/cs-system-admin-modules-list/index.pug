dom-module#cs-system-admin-modules-list
	template
		style(include="advanced-styles")
		table.cs-table(center list)
			tr
				th [[L.module_name]]
				th [[L.state]]
				th [[L.action]]
			template(is="dom-repeat" items="[[modules]]" as="module")
				tr(class$="[[module.class]]")
					td
						a(href="/admin/[[module.name]]" tooltip="[[module.info]]" hidden="[[!module.administration]]")
							| [[module.name_localized]]
							cs-tooltip
						span(tooltip="[[module.info]]" hidden="[[module.administration]]")
							| [[module.name_localized]]
							cs-tooltip
					td
						cs-icon(icon="[[module.icon]]" tooltip="[[module.icon_text]]")
						= ' '
						template(is="dom-if" if="[[module.api]]")
							cs-icon(icon="link" tooltip="[[L.api_exists]]" hidden="[[module.api.type]]")
							cs-button(compact tooltip="[[L.api_exists]]" hidden="[[!module.api.type]]"): button(type="button")
								cs-icon(icon="link")
							section(is="cs-section-modal" content="[[module.api.content]]")
						= ' '
						cs-button(compact tooltip="[[L.information_about_module]]" hidden="[[!module.readme]]"): button(type="button")
							cs-icon(icon="book")
						section(is="cs-section-modal" content="[[module.readme.content]]")
						= ' '
						cs-button(compact tooltip="[[L.license]]" hidden="[[!module.license]]"): button(type="button")
							cs-icon(icon="legal")
						section(is="cs-section-modal" content="[[module.license.content]]")
					td(left)
						cs-button(compact tooltip="[[L.make_default_module]]" hidden="[[!module.can_be_set_as_default]]"): button(type="button" on-tap="_set_as_default")
							cs-icon(icon="home")
						= ' '
						cs-button(compact tooltip="[[L.databases]]" hidden="[[!module.db_settings]]"): button(type="button" on-tap="_db_settings")
							cs-icon(icon="database")
						= ' '
						cs-button(compact tooltip="[[L.storages]]" hidden="[[!module.storage_settings]]"): button(type="button" on-tap="_storage_settings")
							cs-icon(icon="hdd-o")
						= ' '
						a(is="cs-link-button" icon="sliders" href="/admin/[[module.name]]" tooltip="[[L.module_admin_page]]" hidden="[[!module.administration]]")
						= ' '
						cs-button(compact tooltip="[[L.disable]]" hidden="[[!module.can_disable]]"): button(type="button" on-tap="_disable")
							cs-icon(icon="minus")
						= ' '
						cs-button(compact hidden="[[!equal(module.active, 0)]]"): button(type="button" on-tap="_enable")
							cs-icon(icon="check")
							|  [[L.enable]]
						= ' '
						cs-button(compact hidden="[[!equal(module.active, -1)]]"): button(type="button" on-tap="_install")
							cs-icon(icon="download")
							|  [[L.install]]
						= ' '
						cs-button(compact tooltip="[[L.uninstall]]" hidden="[[!equal(module.active, 0)]]"): button(type="button" on-tap="_uninstall")
							cs-icon(icon="trash")
						= ' '
						cs-button(compact tooltip="[[L.complete_module_removal]]" hidden="[[!equal(module.active, -1)]]"): button(type="button" on-tap="_remove_completely")
							cs-icon(icon="trash")
		p
			cs-input-text(compact tight): input(type="file" id="file")
			cs-button: button(type="button" on-tap="_upload")
				cs-icon(icon="upload")
				|  [[L.upload_and_install_update_module]]
		p
			cs-input-text(compact tight): input(type="file" id="file_system")
			cs-button: button(type="button" on-tap="_upload_system")
				cs-icon(icon="upload")
				|  [[L.upload_and_update_system]]
		p
			cs-button(tooltip="[[L.update_modules_list_info]]"): button(type="button" on-tap="_update_modules_list")
				cs-icon(icon="refresh")
				|  [[L.update_modules_list]]
	script(src="script.js")
