include ../_settings_mixins
dom-module#cs-system-admin-languages
	template
		style(include="advanced-styles")
		cs-form: form.cs-text-center
			label(tooltip="[[L.default_language_info]]")
				| [[L.default_language]]
				cs-tooltip
			cs-select(selected="{{settings.language}}"): select(size="5")
				template(is="dom-repeat" items="[[settings.active_languages]]")
					option [[item]]
			label(tooltip="[[L.active_languages_info]]")
				| [[L.active_languages]]
				cs-tooltip
			cs-select(selected="{{settings.active_languages}}"): select(size="5" multiple)
				template(is="dom-repeat" items="[[settings.languages]]")
					option [[item]]
			+on-off-switcher("multilingual")
			+footer-buttons
	script(src="script.js")
