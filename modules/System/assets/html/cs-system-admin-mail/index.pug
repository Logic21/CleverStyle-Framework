include ../_settings_mixins
dom-module#cs-system-admin-mail
	template
		style(include="advanced-styles")
		cs-form: form.cs-text-center
			+on-off-switcher("smtp")
			+input("smtp_host", "!smtp")
			+input("smtp_port", "!smtp", "number")
			+on-off-switcher("smtp_secure", "!smtp", ["", "ssl", "tls"], ["[[L.off]]", "SSL", "TLS"])
			+on-off-switcher("smtp_auth", "!smtp")
			+input("smtp_user", "!smtp_auth")
			+input("smtp_password", "!smtp_auth")
			+input("mail_from", null, "email")
			+input("mail_from_name")
			+editor("mail_signature", true)
			p
				cs-button(compact icon="signal"): button(type="button" on-tap="_test_email") [[L.test_email_sending]]
			+footer-buttons
	script(src="script.js")
