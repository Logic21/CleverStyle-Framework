dom-module#cs-static-pages-admin-pages-list
	template
		style(include="advanced-styles")
		table.cs-table(list)
			tr
				th [[L.page_title]]
				th [[L.action]]
			template(is="dom-repeat" items="[[pages]]")
				tr
					td
						a(href="/[[item.full_path]]") [[item.title]]
					td
						a(is="cs-link-button" icon="file-text" href="/admin/Static_pages/edit_page/[[item.id]]" tooltip="[[L.edit]]")
						= ' '
						button(is="cs-button" icon="trash" on-tap="_delete" tooltip="[[L.delete]]")
		p
			a(is="cs-link-button" href="/admin/Static_pages/add_page/[[category]]") [[L.add_page]]
	script(src="script.js")
